<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="system" method="upgrade">
    <name>System - Usersnap</name>
    <author>Usersnap.com</author>
    <creationDate>June 2015</creationDate>
    <copyright>Copyright (C) 2015 usersnap.com</copyright>
    <license>GNU/GPLv2 http://www.gnu.org/licenses/gpl-2.0.html</license>
    <authorEmail>contact@usersnap.com</authorEmail>
    <authorUrl>usersnap.com</authorUrl>
    <version>2.0.0</version>
    <releaseDate>2015-06-01</releaseDate>
    <description>With usersnap your visitors can create visual feedback.</description>
    
    <files>
            <filename plugin="usersnap">usersnap.php</filename>
            <filename>index.html</filename>
    </files>
        
    <languages>
            <language tag="en-GB">en-GB.plg_system_usersnap.ini</language>
    </languages>
        
    <config>
        <fields name="params">

            <fieldset name="basic">
                <field name="api-key"
                    type="text" 
                    label="PLG_SYSTEM_USERSNAP_APIKEY" 
                    size="32"
                    description="PLG_SYSTEM_USERSNAP_APIKEYDESCR"
                />
            </fieldset>
        </fields>
    </config>   
</extension>